<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Task</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-zinc-900 text-white font-sans">
  <div class="w-full min-h-screen flex flex-col items-center justify-start py-12 px-4">
    
    <!-- Task Form -->
    <div class="w-full max-w-xl bg-zinc-800 p-8 rounded-2xl shadow-2xl mb-12">
      <h2 class="text-2xl font-bold mb-6 text-purple-400 text-center">ğŸ“ Create a New Task</h2>
      
      <form action="/create" method="POST">
        <input 
          class="block w-full mb-4 px-5 py-3 bg-zinc-700 text-white rounded-lg outline-none focus:ring-2 focus:ring-purple-500 placeholder:text-zinc-400"
          type="text" 
          name="title"   
          placeholder="Title goes here..." 
          required
        >

        <textarea 
          class="block w-full mb-6 px-5 py-3 bg-zinc-700 text-white resize-none rounded-lg outline-none focus:ring-2 focus:ring-purple-500 placeholder:text-zinc-400"
          name="details"   
          placeholder="Write your task details here..." 
          rows="5"
          required
        ></textarea>

        <button 
          class="w-full flex items-center justify-center gap-2 bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 rounded-lg transition duration-300"
          type="submit"
        >
          <i data-lucide="plus-circle" class="w-5 h-5"></i>
          Create Task
        </button>
      </form>
    </div>

    <!-- Task Display Section -->
    <div class="tasks w-full max-w-6xl flex flex-wrap justify-center gap-6">
      <% if (Array.isArray(files) && files.length > 0) { %>
        <% files.forEach(function(file) { %>
          <div class="task bg-zinc-800 rounded-xl shadow-lg p-6 w-72">
            <h3 class="text-white text-lg font-semibold break-words mb-2"><%= file %></h3>

            <a href="/files/<%= file %>" class="text-pink-400 hover:underline text-sm inline-flex items-center gap-1 mt-2">
              <i data-lucide="book-open" class="w-4 h-4"></i> Read More
            </a>
            <br/>

            <a href="/edit/<%= file%>" class="text-yellow-400 hover:underline text-sm inline-flex items-center gap-1 mt-2">
              <i data-lucide="edit-3" class="w-4 h-4"></i> Edit
            </a>
            <br/>

            <a href="/files/<%= file %>" class="text-blue-400 hover:underline text-sm inline-flex items-center gap-1 mt-2" download>
              <i data-lucide="download" class="w-4 h-4"></i> Download
            </a>
          </div>
        <% }); %>
      <% } else { %>
        <h1 class="text-red-400 text-lg font-semibold mt-10">No tasks found</h1>
      <% } %>
    </div>
  </div>

  <script>
    lucide.createIcons();
  </script>
</body>
</html>
