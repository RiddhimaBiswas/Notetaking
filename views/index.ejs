<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Task</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">
  <div class="main w-full min-h-screen flex flex-col items-center justify-center">
    <!-- Task Form -->
    <div class="form w-full max-w-md bg-zinc-800 p-8 rounded-xl shadow-lg">
      <!-- âœ… Fixed form -->
        <form action="/create" method="POST">
        <input 
            class="block w-full mb-4 px-5 py-2 bg-zinc-700 text-white rounded outline-none focus:ring-2 focus:ring-purple-500"
            type="text" 
            name="title"   
            placeholder="Title goes here.." 
            required
        >

        <textarea 
            class="block w-full mb-4 px-5 py-2 bg-zinc-700 text-white resize-none rounded outline-none focus:ring-2 focus:ring-purple-500"
            name="details"   
            placeholder="Write your task..." 
            rows="5"
            required
        ></textarea>

        <input 
            class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 rounded cursor-pointer transition"
            type="submit" 
            value="Create Task"
        >
        </form>

    </div>

    <!-- Task Display Section -->
    <div class="tasks mt-10 flex flex-wrap gap-6 justify-center">
      <% if (Array.isArray(files) && files.length > 0) { %>
        <% files.forEach(function(file) { %>
          <div class="task w-72 px-4 py-4 rounded-md bg-zinc-800">
            <h1 class="text-white text-xl tracking-tight break-words"><%= file %></h1>
            <a href="/files/<%= file %>" class="text-pink-500 inline-block mt-3">Read More..</a>
            <br>
            <a href="/files/<%= file %>" class="text-blue-500 inline-block mt-3" download>Download</a>
          </div>
        <% }); %>
      <% } else { %>
        <h1 class="text-red-400 text-lg font-semibold">No tasks found</h1>
      <% } %>
    </div>
  </div>
</body>
</html>
